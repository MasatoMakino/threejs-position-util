{
  "name": "@masatomakino/threejs-position-util",
  "version": "0.3.1",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "module": "./esm/index.js",
  "files": [
    "lib",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/threejs-position-util.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "keywords": [
    "threejs"
  ],
  "peerDependencies": {
    "three": ">=0.126.0 <1.0.0"
  },
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.4.4",
    "@masatomakino/gulptask-dev-server": "^0.4.1",
    "@types/jest": "^28.1.1",
    "@types/three": "^0.141.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "three": "^0.141.0",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.3"
  },
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "prepare": "husky install",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo",
    "demo": "npx @masatomakino/gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"1920\" height=\"1080\"></canvas>'",
    "buildTS": "npx tsc --project tsconfig.json & npx tsc --project tsconfig.esm.json",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "npx @masatomakino/gulptask-dev-server -b ./docs/demo",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental --project tsconfig.json & tsc -W --incremental --project tsconfig.esm.json"
  },
  "description": "measuring geometry positions for three.js",
  "bugs": {
    "url": "https://github.com/MasatoMakino/threejs-position-util/issues"
  },
  "homepage": "https://github.com/MasatoMakino/threejs-position-util#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  }
}
