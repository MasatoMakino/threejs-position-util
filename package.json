{
  "name": "@masatomakino/threejs-position-util",
  "version": "0.5.0",
  "type": "module",
  "exports": {
    ".": {
      "default": {
        "types": "./esm/index.d.ts",
        "default": "./esm/index.js"
      }
    }
  },
  "types": "./esm/index.d.ts",
  "files": [
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://MasatoMakino@github.com/MasatoMakino/threejs-position-util.git"
  },
  "author": "MasatoMakino <unagiinu.g@gmail.com>",
  "license": "MIT",
  "keywords": [
    "threejs"
  ],
  "devDependencies": {
    "@masatomakino/gulptask-demo-page": "^0.7.2",
    "@types/three": "^0.159.0",
    "@vitest/coverage-istanbul": "^1.0.4",
    "browser-sync": "^2.29.3",
    "husky": "^8.0.3",
    "jsdom": "^23.0.1",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.0",
    "three": "^0.159.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.1.6",
    "vitest": "^1.0.4"
  },
  "peerDependencies": {
    "three": ">=0.126.0 <1.0.0"
  },
  "scripts": {
    "test": "vitest",
    "coverage": "vitest --run --coverage",
    "prepare": "husky install",
    "preversion": "git checkout main && git pull && npm ci && npx vitest --run",
    "postversion": "git add package.json package-lock.json && git checkout -b version/$(git describe --tags --abbrev=0)",
    "start:dev": "npm run server & npm run watch:tsc & npm run watch:demo",
    "build": "npm run buildTS && npm run demo",
    "demo": "npx @masatomakino/gulptask-demo-page --body '<canvas id=\"webgl-canvas\" width=\"1920\" height=\"1080\"></canvas>'",
    "buildTS": "tsc",
    "typedocs": "npx typedoc --out ./docs/api src/index.ts",
    "server": "browser-sync ./docs/demo -w",
    "watch:demo": "npm run demo -- -W",
    "watch:tsc": "tsc -W --incremental"
  },
  "description": "measuring geometry positions for three.js",
  "bugs": {
    "url": "https://github.com/MasatoMakino/threejs-position-util/issues"
  },
  "homepage": "https://github.com/MasatoMakino/threejs-position-util#readme",
  "directories": {
    "doc": "docs",
    "lib": "lib"
  },
  "lint-staged": {
    "*.{js,ts,css,md}": "prettier --write"
  }
}
